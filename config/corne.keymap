// Spanish definitions
#define es_egne   &kp SEMICOLON // Ñ ;

ZMK_BEHAVIOR(mm_slash_under, mod_morph,
    bindings = <&kp SLASH>, <&kp UNDER>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
)

ZMK_BEHAVIOR(td_ls_caps, tap_dance,
    tapping-term-ms = <250>;
    bindings = <&kp LSHFT>, <&kp CAPS>;
)

ZMK_BEHAVIOR(td_rs_caps, tap_dance,
    tapping-term-ms = <250>; 
    bindings = <&kp RSHFT>, <&kp CAPS>;
)

ZMK_BEHAVIOR(td_o_acute, tap_dance,
    tapping-term-ms = <250>; 
    bindings = <&kp O>, <&es_o_acute>;
)

